@inherits ComponentBase

@rendermode InteractiveServer

<div class="@Class">
        <RadzenImage Path="@imagePath" AlternateText="Displayed Image"></RadzenImage>
    <RadzenStack Orientation="Radzen.Orientation.Vertical" Gap="1rem">
            <RadzenUpload Icon="upload" @ref="upload" Accept=".png,.jpeg,.jpg" Auto="false" Multiple="false" Change=@(args => OnChange(args)) InputAttributes="@(new Dictionary<string,object>(){ { "aria-label", "select file" }})"
                          Progress=@(args => OnProgress(args)) />
            <RadzenImage Path="@newImagePath" Visible="@(!string.IsNullOrEmpty(newImagePath))" AlternateText="New Image"></RadzenImage>
        </RadzenStack>
</div>