@inherits ComponentBase

@rendermode InteractiveServer

@{
    var index = 1;

    @foreach (var game in gamesGrid)
    {
        <CollapsiblePanel Title="@($"Round {index}")">
            <ChildContent>
                @foreach (var item in game)
                {
                    <GameCard Game="item" Style="margin-top: 5px; margin-bottom: 5px;" />
                }
            </ChildContent>
        </CollapsiblePanel>
        index += 1;
    }
}