@inherits ComponentBase

@rendermode InteractiveServer

<div class="game-card" style="@Style">
    <div class="championship-name">@Game.ChampionshipName</div>
    <div class="game-name-box">
        <div class="game-name">@Game.Name</div>
    </div>
    <div class="game-details">
        <div class="left-column">
            <div class="date-status">
                <div>@(Game.Date == null ? "" : Game.Date.Value.ToString("dd/MM/yyyy"))</div>
                <StatusBadge Status="@Game.GameStatusName"></StatusBadge>
            </div>
        </div>
        <div class="team-info">
            <div class="team-row">
                <img src="@blueTeamLogoPath" alt="Blue Team Logo" class="team-logo" />
                <div class="team-name">@(Game.BlueTeam?.Name ?? "TBD")</div>
                <div class="team-points">@(Game.BluePoints ?? (Game.GameStatusName == "Live" ? 0 : null))</div>
            </div>
            <div class="team-row">
                <img src="@redTeamLogoPath" alt="Red Team Logo" class="team-logo" />
                <div class="team-name">@(Game.RedTeam?.Name ?? "TBD")</div>
                <div class="team-points">@(Game.RedPoints ?? (Game.GameStatusName == "Live" ? 0 : null))</div>
            </div>
        </div>
    </div>
</div>
