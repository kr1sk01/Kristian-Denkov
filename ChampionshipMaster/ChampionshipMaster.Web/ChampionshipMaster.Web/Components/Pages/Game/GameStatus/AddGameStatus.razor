@page "/addgamestatus"
@using System.ComponentModel.DataAnnotations
@rendermode InteractiveServer

<EditForm Model="@gameStatus" OnValidSubmit="HandleValidSubmit" FormName="AddGameStatus">
    <DataAnnotationsValidator />

    <div class="row justify-content-center">
        <h3>Add Game Status</h3>
        <div class="form-group">
            <label for="name">Name:</label>
            <InputText id="name" class="form-control" @bind-Value="gameStatus.Name" />
            <ValidationMessage For="@(() => gameStatus.Name)" />
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</EditForm>

@code {
    private GameStatus gameStatus = new GameStatus();

