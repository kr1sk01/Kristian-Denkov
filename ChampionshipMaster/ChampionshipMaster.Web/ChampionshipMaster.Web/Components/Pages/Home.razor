@page "/"
@page "/home"

@inherits ComponentBase

@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-4">
    <Carousel>
        <CarouselItem>
            <div style="width:1280px;height:720px;overflow: hidden;">
                <a onclick=@openCreateTeam><RadzenImage class="d-block w-100 cover" Path="Images/teamvsteam.png" AlternateText="FoosBallRules" /></a>
                <div class="glassmorphism carousel-caption d-none d-md-block">
                    <h4>Create you own team!</h4>
                    <h5>Team creation is one click away from you!</h5>
                </div>
            </div>
        </CarouselItem>
        <CarouselItem>
            <div style="width:1280px;height:720px;overflow: hidden;">
                <a onclick=@openChampionship><RadzenImage src="/images/tournament.jpg" class="d-block w-100 scaledown" alt="Slide 2" /></a>
                <div class="glassmorphism carousel-caption d-none d-md-block">
                    <h4>Take your first adventure!</h4>
                    <h5>Join your first championship now!</h5>
                </div>
            </div>
        </CarouselItem>
        <CarouselItem>
            <div style="width:1280px;height:720px;overflow: hidden;">
                <a onclick=@openCreateTeam><RadzenImage src="/images/mk.jpg" class="d-block w-100 cover" alt="Slide 2" /></a>
                <div class="glassmorphism carousel-caption d-none d-md-block">
                    <h4>Mortal Kombat 1v1 Battles!</h4>
                    <h5>You can start any time, create team!</h5>
                </div>
            </div>
        </CarouselItem>
        <CarouselItem>
            <div style="width:1280px;height:720px;overflow: hidden;">
                <a onclick=@openRulesPage>
                    <video autoplay loop muted>
                        <source src="/videos/foosball.mp4" type="video/mp4">
                        <!-- Add additional <source> elements for other video formats if needed -->
                        Your browser does not support the video tag.
                    </video>
                </a>
                <div class="glassmorphism carousel-caption d-none d-md-block">
                    <h4>See foosball rules!</h4>
                    <h5>With a click of a button you can go to rules page!</h5>
                </div>
            </div>
        </CarouselItem>
    </Carousel>
</div>
<style>
    body {
        background-color: #706c6c;
    }

    .cover {
        object-fit: cover;
    }

    .scaledown123 {

        object-fit: scale-down;
    }

    video {
        width: 100%;
        height: 100%;
        object-fit: fill; /* or 'cover', 'contain', 'none', depending on the desired effect */
    }
    .glassmorphism {
        background: rgba(255, 255, 255, 0.2); /* Background color with transparency */
        backdrop-filter: blur(10px); /* Apply blur effect */
        border-radius: 10px; /* Rounded corners */
        border: 1px solid rgba(255, 255, 255, 0.18); /* Border with transparency */
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37); /* Box shadow */
        backdrop-filter: blur(4px); /* Additional blur */
        padding-down: 30px;
        color: black;
    }

</style>