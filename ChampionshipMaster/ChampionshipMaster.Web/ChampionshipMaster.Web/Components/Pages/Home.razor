@page "/"
@page "/home"

@inherits ComponentBase

@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-4">
    <Carousel Width="1366px">
        <CarouselItem>
            <a onclick=@openCreateTeam><img src="https://via.placeholder.com/1280x720?text=Slide+1" class="d-block w-100" alt="Slide 1"></a>
            <div class="carousel-caption d-none d-md-block">
                <h5>Create you own team!</h5>
                <p>You can create your own team & add players to it in the teams section!</p>
            </div>
        </CarouselItem>
        <CarouselItem>
            <a onclick=@openChampionship><img src="https://via.placeholder.com/1280x720?text=Slide+2" class="d-block w-100" alt="Slide 2"></a>
            <div class="carousel-caption d-none d-md-block">
                <h5>Championship participation!</h5>
                <p>You can join your time in any championship just click!</p>
            </div>
        </CarouselItem>
        <CarouselItem>
            <img src="https://via.placeholder.com/1280x720?text=Slide+3" class="d-block w-100" alt="Slide 3">
            <div class="carousel-caption d-none d-md-block">
                <h5>Third slide label</h5>
                <p>Some representative placeholder content for the third slide.</p>
            </div>
        </CarouselItem>
    </Carousel>
</div>
<style>
    body {
        background-color: #706c6c;
    }
    img{
        width:90%;
        height:90%;

    }
</style>