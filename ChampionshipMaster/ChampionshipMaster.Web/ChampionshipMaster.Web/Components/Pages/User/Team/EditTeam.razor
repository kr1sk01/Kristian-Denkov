@page "/editteam/{id}"

@inherits ComponentBase

@rendermode InteractiveServer

<h3 class="titleEdit">Edit Team</h3>

@if (isLogged)
{
    <div class="edit-team-container">
        <div class="left-container">
            <ChangeName @ref=@changeTeamName
                        StateChange=@CheckButtonState />
            <ChangeTeamMembers @ref=@changeTeamMembers id="@id" StateChange="@CheckButtonState" RequestUrl="@teamMembersRequestUrl" />
        </div>

        <div class="right-container">
            <ImageUpload @ref=@changeTeamLogo
                         Title="Team Logo"
                         SetImageFor="@ImageUpload.SetImageForOptions.Team"
                         RequestUrl="@logoRequestUrl"
                         StateChange=@CheckButtonState />
        </div>
    </div>

    <center>
        <RadzenButton Click=@OnClick Text="Save Changes" ButtonStyle="ButtonStyle.Primary" Disabled="@isValueInitial" Class="SaveButtonEdit" />
    </center>
}
