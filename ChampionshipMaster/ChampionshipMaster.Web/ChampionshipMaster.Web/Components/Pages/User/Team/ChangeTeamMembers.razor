@inherits ComponentBase

@rendermode InteractiveServer

<RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center">
    <h2>Select Team Members</h2>

    <RadzenStack Orientation="Orientation.Vertical">
        <RadzenLabel Component="DropDownFiltering" Text="Player 1"></RadzenLabel>
        <RadzenDropDown @ref=@(dropDowns[0])
                        TValue="string"
                        ClearSearchAfterSelection="true"
                        FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                        FilterOperator="StringFilterOperator.StartsWith"
                        AllowFiltering="true"
                        Data=@selectablePlayers
                        TextProperty="Name"
                        ValueProperty="Id"
                        Style="width: 100%; max-width: 400px;"
                        Name="DropDownFiltering"
                        ValueChanged="@(args => UpdateData(args, 0))" />
    </RadzenStack>

    <RadzenStack Orientation="Orientation.Vertical" Visible=@(teamMaxPlayers > 1)>
        <RadzenLabel Component="DropDownFiltering2" Text="Player 2"></RadzenLabel>
        <RadzenDropDown @ref=@(dropDowns[1])
                        TValue="string"
                        ClearSearchAfterSelection="true"
                        FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                        FilterOperator="StringFilterOperator.StartsWith"
                        AllowFiltering="true"
                        Data=@selectablePlayers
                        TextProperty="Name"
                        ValueProperty="Id"
                        Style="width: 100%; max-width: 400px;"
                        Name="DropDownFiltering2"
                        ValueChanged="@(args => UpdateData(args, 1))" />
    </RadzenStack>

    <RadzenStack Orientation="Orientation.Vertical" Visible=@(teamMaxPlayers > 2)>
        <RadzenLabel Component="DropDownFiltering3" Text="Player 3"></RadzenLabel>
        <RadzenDropDown @ref=@(dropDowns[2])
                        TValue="string"
                        ClearSearchAfterSelection="true"
                        FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                        FilterOperator="StringFilterOperator.StartsWith"
                        AllowFiltering="true"
                        Data=@selectablePlayers
                        TextProperty="Name"
                        ValueProperty="Id"
                        Style="width: 100%; max-width: 400px;"
                        Name="DropDownFiltering3"
                        ValueChanged="@(args => UpdateData(args, 2))" />
    </RadzenStack>

    <RadzenStack Orientation="Orientation.Vertical" Visible=@(teamMaxPlayers > 3)>
        <RadzenLabel Component="DropDownFiltering4" Text="Player 4"></RadzenLabel>
        <RadzenDropDown @ref=@(dropDowns[3])
                        TValue="string"
                        ClearSearchAfterSelection="true"
                        FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                        FilterOperator="StringFilterOperator.StartsWith"
                        AllowFiltering="true"
                        Data=@selectablePlayers
                        TextProperty="Name"
                        ValueProperty="Id"
                        Style="width: 100%; max-width: 400px;"
                        Name="DropDownFiltering4"
                        ValueChanged="@(args => UpdateData(args, 3))" />
    </RadzenStack>
    
</RadzenStack>

