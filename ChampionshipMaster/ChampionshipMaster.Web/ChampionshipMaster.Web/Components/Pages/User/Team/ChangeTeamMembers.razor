@inherits ComponentBase

@rendermode InteractiveServer

<RadzenStack Orientation="Radzen.Orientation.Vertical" AlignItems="AlignItems.Center" JustifyContent="Radzen.JustifyContent.Center">
    <RadzenStack Orientation="Radzen.Orientation.Vertical">
        <RadzenLabel Component="DropDownFiltering" Text="Player 1" Style="color:white;"></RadzenLabel>
        <RadzenDropDown @ref=@(dropDowns[0])
                        TValue="string"
                        ClearSearchAfterSelection="true"
                        FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                        FilterOperator="StringFilterOperator.StartsWith"
                        AllowFiltering="true"
                        Data=@selectablePlayers
                        TextProperty="Name"
                        ValueProperty="Id"
                        Style="width: 100%; max-width: 400px;"
                        Name="DropDownFiltering"
                        ValueChanged="@(args => UpdateData(args, 0))">
            <Template Context="player1">
                <ImageNameTemplate Image="@player1.Avatar"
                                   Name="@player1.Name"
                                   ImageType="ImageNameTemplate.ImageTypeOptions.Avatar" />
            </Template>
        </RadzenDropDown>
    </RadzenStack>

    <RadzenStack Orientation="Radzen.Orientation.Vertical" Visible=@(teamMaxPlayers > 1)>
        <RadzenLabel Component="DropDownFiltering2" Text="Player 2" Style="color:white;"></RadzenLabel>
