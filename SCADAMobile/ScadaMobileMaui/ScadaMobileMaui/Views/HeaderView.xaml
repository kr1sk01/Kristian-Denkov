<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScadaMobileMaui.Views.HeaderView">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="#da2127" Offset="0.2" />
                <GradientStop Color="#d72e57" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>
        <Label x:Name="HeaderTitle" TextColor="White" VerticalOptions="Center" HorizontalOptions="Start" FontSize="20" Padding="15,20" />
    </Grid>
</ContentView>
