<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScadaMobileMaui.Pages.LoginPage"
             BackgroundColor="{StaticResource BackgroundColor}">
    <StackLayout Padding="30" VerticalOptions="StartAndExpand">
        <Image Source="toplo_logo_cropped.svg" WidthRequest="100" Margin="0,0,0,170" />
        <Entry x:Name="Email" Placeholder="Имейл" Keyboard="Email" Style="{StaticResource CustomEntry}" />
        <Entry x:Name="Password" Placeholder="Парола" IsPassword="True" Style="{StaticResource CustomEntry}" />
        <Button Text="Вход в системата" Clicked="OnLoginButtonClicked" BackgroundColor="#da2127" TextColor="White" Margin="0,5" />
        <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" HorizontalOptions="CenterAndExpand" Margin="0,10" />
    </StackLayout>
</ContentPage>